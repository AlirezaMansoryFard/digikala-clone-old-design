{
  "name": "digikala",
  "version": "1.0.0",
  "description": "it is digikala clone project with Sass And responsiveable",
  "license": "This project is open-source and available under the MIT License",
  "author": "AlirezaMansoryFard",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass sass/main.scss public/css/style.css -w",
    "compile:sass": "sass sass/main.scss public/css/style.compile.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 version' public/css/style.compile.css -o public/css/style.prefix.css",
    "compress:css": "postcss public/css/style.prefix.css -o public/css/style.css",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.1",
    "sass": "^1.93.2",
    "swiper": "^12.0.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "bootstrap": "^5.3.8",
    "jquery": "^3.7.1"
  }
}
